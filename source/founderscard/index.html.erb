    </div>
  </section>

  <footer class="footer">
    <div class="makers">
      <span class="maker">
        <a class="website" href="http://brandonweiss.me">Brandon Weiss</a>
        <a class="twitter" href="https://twitter.com/brandon_weiss">@brandon_weiss</a>
      </span>

      <span class="photo">
        <%= image_tag 'founderscard/makers.png', width: 80, height: 80 %>
      </span>

      <span class="maker">
        <a class="website" href="http://joannachao.com">Joanna Chao</a>
        <a class="twitter" href="https://twitter.com/jo_annachao">@jo_annachao</a>
      </span>
    </div>
  </footer>

